  		"label":"Icon Heading 2",
  		"default":"Icon Heading 2"
  	},
    {
		"type":"richtext",
  		"id":"icon_para_2",
  		"label":"Icon Paragraph 2",
  		"default":"<p> Please Text Here regarding the paragraph of the subject</p>"
    },
	{
		"type":"image_picker",
		"id":"custom_image_3",
		"label":"Custom Image Icon 3"
	},
  	{
  		"type":"text",
  		"id":"block_icon_heading_3",
  		"label":"Icon Heading_3",
  		"default":"Icon Heading 3"
  	},
  	{
  		"type":"richtext",
  		"id":"icon_para_3",
  		"label":"Icon Para 3",
  		"default":"<p>Please Here Text regarding the paragraph of the subject</p>"
  	},
    {
		"type":"image_picker",
  		"id":"custom_image_4",
  		"label":"Custom Image 4"
    },
  	{
  		"type":"text",
  		"id":"icon_heading_4",
  		"label":"Icon Heading 4",
  		"default":"Icon Heading 4"
  	},
  	{
  		"type":"richtext",
  		"id":"icon_para_4",
  		"label":"Icon Para 4",
  		 "default":"<p>Please Here Text regarding the paragraph of the subject</p>"
  	}
  
	]
  }
	],
	"presets":[
	{
	"name":"custom section",
	"category":"content"
	}	
	]
  }
